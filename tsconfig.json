{
  "compilerOptions": {
    "types": ["vitest/globals", "node"],
    "target": "esnext",
    "module": "esnext",
    "removeComments": true,
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src", "test", "**/*.test.ts"]
}
